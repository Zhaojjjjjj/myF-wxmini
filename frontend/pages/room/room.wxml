<view class="container">
  <!-- 顶部按钮 -->
  <view class="header">
    <button class="refresh-btn" bindtap="refreshRoom">刷新</button>
    <button class="invite-btn" bindtap="showInviteModal">邀请</button>
    <button class="exit-btn" bindtap="exitRoom">退出房间</button>
  </view>

  <!-- 成员列表 -->
  <view class="members">
    <block wx:for="{{members}}" wx:key="id">
      <view class="member-card" bindtap="onMemberTap" data-user-id="{{item.id}}" data-user-nickname="{{item.nickname}}" data-user-avatar="{{item.avatar_url}}">
        <image class="avatar" src="{{item.avatar_url}}" mode="aspectFill"></image>
        <text class="nickname">{{item.nickname}}</text>
        <text class="score">{{item.score}}</text>
      </view>
    </block>
  </view>

  <!-- 日志区域 -->
  <view class="logs">
    <block wx:for="{{logs}}" wx:key="id">
      <view class="log-item">
        <text class="log-text">{{item.created_at}} {{item.from_user_nickname}}转账{{item.to_user_nickname}} {{item.amount}}</text>
      </view>
    </block>
  </view>

  <!-- 邀请弹窗 -->
  <view class="modal" wx:if="{{showInviteModal}}">
    <view class="modal-content">
      <image class="qrcode" src="{{qrcodeUrl}}" mode="aspectFit"></image>
      <button class="share-btn" open-type="share">邀请好友</button>
      <button class="close-btn" bindtap="hideInviteModal">关闭</button>
    </view>
  </view>

  <!-- 转分弹窗 -->
  <view class="modal" wx:if="{{showTransferModal}}">
    <view class="modal-content">
      <input class="transfer-input" placeholder="输入转账金额(1-10000)" type="number" bindinput="onTransferAmountInput" />
      <button class="confirm-btn" bindtap="confirmTransfer">确定</button>
      <button class="close-btn" bindtap="hideTransferModal">关闭</button>
    </view>
  </view>

  <!-- 修改资料弹窗 -->
  <view class="modal" wx:if="{{showProfileModal}}">
    <view class="modal-content">
      <!-- 头像预览和上传区域 -->
      <view class="avatar-upload-section">
        <image class="avatar-preview" src="{{currentUserAvatar}}" mode="aspectFill" bindtap="chooseAvatar"></image>
        <button class="change-avatar-btn" bindtap="chooseAvatar">更换头像</button>
      </view>

      <!-- 昵称输入 -->
      <input class="profile-input" placeholder="输入昵称" value="{{newNickname}}" bindinput="onNicknameInput" />

      <button class="confirm-btn" bindtap="confirmUpdateProfile">确定</button>
      <button class="close-btn" bindtap="hideProfileModal">关闭</button>
    </view>
  </view>
</view>
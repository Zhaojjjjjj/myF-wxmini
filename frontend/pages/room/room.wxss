
/* 主要容器 */
.container {
	position: relative;
	z-index: 1;
	padding: 0px 20px;
	min-height: 100vh;
	background: transparent;
	display:flex;
	flex-direction:column;
}

/* 顶部按钮区域 */
.header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 12px;
	gap: 12px;
}

.refresh-btn,
.invite-btn {
	flex: 1;
	height: 48px;
	background: #ffffff;
	color: #3b82f6;
	border: 1px solid #3b82f6;
	border-radius: 12px;
	font-size: 15px;
	font-weight: 500;
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 0 16px;
	position: relative;
}

.refresh-btn:hover,
.invite-btn:hover {
	background: #f9fafb;
	border-color: #d1d5db;
}

.btn-text {
	font-size: 15px;
	font-weight: 500;
}

.exit-btn {
	flex: 1;
	height: 48px;
	background: #ffffff;
	color: #dc2626;
	border: 1px solid #fecaca;
	border-radius: 12px;
	font-size: 15px;
	font-weight: 500;
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 0 16px;
}

.exit-btn:hover {
	background: #fef2f2;
	border-color: #fca5a5;
	transform: translateY(-1px);
}
/* 成员列表区域 */
.members-container {
}

.members-scroll {
	display: flex;
	gap: 16px;
	overflow-x: auto;
	overflow-y: hidden;
	padding: 8px 0 16px 0;
	scroll-behavior: smooth;
	-webkit-overflow-scrolling: touch;
}

.members-scroll::-webkit-scrollbar {
	height: 4px;
	background: transparent;
}

.members-scroll::-webkit-scrollbar-thumb {
	background: #d1d5db;
	border-radius: 2px;
}

.members-scroll::-webkit-scrollbar-thumb:hover {
	background: #9ca3af;
}

.member-card {
	flex: 0 0 auto;
	width: 120px;
	padding: 20px 16px 16px 16px;
	background: #ffffff;
	border-radius: 16px;
	text-align: center;
	border: 1px solid #3b82f6;
	position: relative;
}

.member-card:hover {
	border-color: #e5e7eb;
}


.avatar {
	width: 64px;
	height: 64px;
	border-radius: 50%;
	margin-bottom: 12px;
	border: 2px solid #f3f4f6;
}

.member-card:hover .avatar {
	border-color: #3b82f6;
}

.nickname {
	display: block;
	font-size: 14px;
	font-weight: 500;
	color: #374151;
	margin-bottom: 4px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	line-height: 1.2;
}

.score {
	display: block;
	font-size: 18px;
	font-weight: 600;
	color: #3b82f6;
	line-height: 1;
}

/* 日志区域 */
.logs {
	flex: 1 1 0%;
	background: #ffffff;
	border-radius: 16px;
	padding: 24px;
	border: 1px solid #3b82f6;
	overflow-y: auto;
	margin-bottom:20px;
}

.logs::-webkit-scrollbar {
	width: 4px;
}

.logs::-webkit-scrollbar-track {
	background: transparent;
}

.logs::-webkit-scrollbar-thumb {
	background: #d1d5db;
	border-radius: 2px;
}

.logs::-webkit-scrollbar-thumb:hover {
	background: #9ca3af;
}

.log-item {
	margin-bottom: 12px;
	padding: 12px 16px;
	background: #f9fafb;
	border-radius: 8px;
	border-left: 3px solid #3b82f6;
}

.log-item:hover {
	background: #f3f4f6;
}

.log-item:last-child {
	margin-bottom: 0;
}

.log-text {
	font-size: 14px;
	color: #374151;
	line-height: 1.5;
	font-weight: 400;
}

/* 弹窗样式 */
.modal {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.5);
	display: flex;
	justify-content: center;
	align-items: center;
	z-index: 1000;
}

.modal-content {
	width: 320px;
	max-width: 90vw;
	background: #ffffff;
	border-radius: 20px;
	padding: 32px 24px 24px 24px;
	text-align: center;
	border: 1px solid #f3f4f6;
	position: relative;
}

@keyframes modalSlideIn {
	from {
		opacity: 0;
		transform: scale(0.95) translateY(-10px);
	}
	to {
		opacity: 1;
		transform: scale(1) translateY(0);
	}
}

/* 邀请弹窗特殊样式 */
.invite-modal {
	width: 360px;
	max-width: 90vw;
}

.modal-title {
	font-size: 20px;
	font-weight: 600;
	color: #111827;
	margin-bottom: 24px;
	text-align: center;
}

.qrcode-container {
	position: relative;
	width: 200px;
	height: 200px;
	margin: 0 auto 20px;
	border-radius: 16px;
	overflow: hidden;
	border: 1px solid #e5e7eb;
	background: #ffffff;
}

.qrcode {
	width: 100%;
	height: 100%;
	border-radius: 15px;
}

.qrcode-loading,
.qrcode-error {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	background: #ffffff;
	border-radius: 15px;
}

.loading-text,
.error-text {
	font-size: 14px;
	color: #6b7280;
	margin-bottom: 12px;
}

.retry-btn {
	width: 80px;
	height: 32px;
	background: #3b82f6;
	color: white;
	border: none;
	border-radius: 8px;
	font-size: 12px;
	font-weight: 500;
}

.retry-btn:hover {
	background: #2563eb;
}

.invite-tip {
	font-size: 14px;
	color: #6b7280;
	line-height: 1.5;
	margin-bottom: 24px;
	text-align: center;
}

.share-btn,
.close-btn,
.confirm-btn {
	width: 100%;
	height: 48px;
	margin-bottom: 12px;
	border: none;
	border-radius: 12px;
	font-size: 16px;
	font-weight: 500;
	cursor: pointer;
	display: flex;
	justify-content: center;
	align-items: center;
	gap: 8px;
}

.share-btn {
	background: #3b82f6;
	color: white;
}

.share-btn:hover {
	background: #2563eb;
}


.close-btn,
.confirm-btn {
	background: #f9fafb;
	color: #374151;
	border: 1px solid #e5e7eb;
}

.close-btn:hover,
.confirm-btn:hover {
	background: #f3f4f6;
	border-color: #d1d5db;
}

/* 头像弹窗特殊样式 */
.profile-modal {
	width: 380px;
	max-width: 90vw;
}

.avatar-upload-section {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-bottom: 32px;
}

.avatar-preview-container {
	position: relative;
	width: 100px;
	height: 100px;
	margin-bottom: 16px;
}

.avatar-preview {
	width: 100%;
	height: 100%;
	border-radius: 50%;
	border: 3px solid #3b82f6;
}

.avatar-preview:active {
	transform: scale(0.98);
}

.avatar-overlay {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	border-radius: 50%;
	background: rgba(0, 0, 0, 0.6);
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	opacity: 0;
	cursor: pointer;
}

.avatar-preview-container:hover .avatar-overlay {
	opacity: 1;
}

.overlay-icon {
	font-size: 20px;
	margin-bottom: 4px;
}

.overlay-text {
	font-size: 12px;
	color: white;
	font-weight: 500;
}

.change-avatar-btn {
	width: 120px;
	height: 36px;
	background: #3b82f6;
	color: white;
	border: none;
	border-radius: 8px;
	font-size: 14px;
	font-weight: 500;
	display: flex;
	justify-content: center;
	align-items: center;
	gap: 6px;
}

.change-avatar-btn:hover {
	background: #2563eb;
}

.input-section {
	width: 100%;
	margin-bottom: 32px;
}

.input-label {
	display: block;
	font-size: 14px;
	font-weight: 500;
	color: #374151;
	margin-bottom: 8px;
	text-align: left;
}

.button-group {
	display: flex;
	justify-content:between;
	gap: 12px;
	width: 100%;
}

/* 表单输入框美化 */
.transfer-input,
.profile-input {
	width: 100%;
	height: 48px;
	border: 1px solid #d1d5db;
	border-radius: 12px;
	margin-bottom: 0;
	padding: 0 16px;
	font-size: 16px;
	background: #ffffff;
	box-sizing: border-box;
}

.transfer-input:focus,
.profile-input:focus {
	border-color: #3b82f6;
	background: #ffffff;
	outline: none;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
	.container {
		padding: 16px;
	}

	.header {
		gap: 8px;
	}

	.refresh-btn,
	.invite-btn,
	.exit-btn {
		height: 44px;
		font-size: 14px;
	}

	.member-card {
		width: 100px;
		padding: 16px 12px 12px 12px;
	}

	.avatar {
		width: 56px;
		height: 56px;
	}

	.nickname {
		font-size: 13px;
	}

	.score {
		font-size: 16px;
	}

	.logs {
		height: 200px;
		padding: 20px;
	}

	.modal-content {
		width: 90%;
		max-width: 340px;
		padding: 24px 20px 20px 20px;
	}

	.invite-modal {
		width: 90%;
		max-width: 320px;
	}

	.profile-modal {
		width: 90%;
		max-width: 340px;
	}

	.qrcode-container {
		width: 180px;
		height: 180px;
	}

	.avatar-preview-container {
		width: 80px;
		height: 80px;
	}

	.modal-title {
		font-size: 18px;
		margin-bottom: 20px;
	}
}

/* 微妙的进入动画 */
.container {
	animation: fadeInUp 0.6s ease-out;
}

.header {
	animation: fadeInDown 0.8s ease-out 0.1s both;
}

.members-container {
	animation: fadeInUp 0.8s ease-out 0.2s both;
}

.logs {
	animation: fadeInUp 0.8s ease-out 0.3s both;
}

@keyframes fadeInUp {
	from {
		opacity: 0;
		transform: translateY(20px);
	}
	to {
		opacity: 1;
		transform: translateY(0);
	}
}

@keyframes fadeInDown {
	from {
		opacity: 0;
		transform: translateY(-20px);
	}
	to {
		opacity: 1;
		transform: translateY(0);
	}
}

/* 成员卡片交错动画 */
.member-card:nth-child(1) { animation-delay: 0.1s; }
.member-card:nth-child(2) { animation-delay: 0.2s; }
.member-card:nth-child(3) { animation-delay: 0.3s; }
.member-card:nth-child(4) { animation-delay: 0.4s; }
.member-card:nth-child(5) { animation-delay: 0.5s; }

.member-card {
	animation: slideInRight 0.6s ease-out both;
}

@keyframes slideInRight {
	from {
		opacity: 0;
		transform: translateX(30px);
	}
	to {
		opacity: 1;
		transform: translateX(0);
	}
}

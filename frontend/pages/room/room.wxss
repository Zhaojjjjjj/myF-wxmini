.container {
  padding: 20px;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.refresh-btn, .invite-btn {
  width: 100px;
  height: 40px;
  background-color: #007aff;
  color: white;
  border-radius: 5px;
  font-size: 16px;
}

.members {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-bottom: 20px;
}

.member-card {
  width: 100px;
  text-align: center;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-bottom: 5px;
}

.nickname {
  display: block;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.score {
  display: block;
  font-size: 16px;
  font-weight: bold;
}

.logs {
  height: 200px;
  overflow-y: auto;
  background-color: white;
  border-radius: 10px;
  padding: 10px;
}

.log-item {
  margin-bottom: 5px;
}

.log-text {
  font-size: 14px;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 300px;
  background-color: white;
  border-radius: 10px;
  padding: 20px;
  text-align: center;
}

.qrcode {
  width: 200px;
  height: 200px;
  margin-bottom: 20px;
}

.share-btn, .close-btn, .confirm-btn {
  width: 100%;
  height: 40px;
  margin-bottom: 10px;
  border-radius: 5px;
  font-size: 16px;
}

.share-btn {
  background-color: #007aff;
  color: white;
}

.close-btn, .confirm-btn {
  background-color: #e0e0e0;
  color: black;
}

.avatar-upload-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}

.avatar-preview {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-bottom: 10px;
  border: 2px solid #007aff;
}

.change-avatar-btn {
  width: 120px;
  height: 32px;
  background-color: #007aff;
  color: white;
  border-radius: 5px;
  font-size: 14px;
  margin-bottom: 20px;
}
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.create-room {
  text-align: center;
}

.create-btn {
  width: 200px;
  height: 50px;
  background-color: #007aff;
  color: white;
  border-radius: 10px;
  font-size: 18px;
}

.room-info {
  text-align: center;
}

.exit-btn {
  width: 200px;
  height: 50px;
  background-color: #ff3b30;
  color: white;
  border-radius: 10px;
  font-size: 18px;
}
/* ==================== 超强3D背景系统 ==================== */

/* 主容器 */
.container {
	position: relative;
	z-index: 1;
	min-height: 100vh;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	overflow: hidden;
	background-image: linear-gradient(to top, #cfd9df 0%, #e2ebf0 100%);
}

/* ==================== 主要内容区域 ==================== */
.main-content {
	width: 100%;
	max-width: 400px;
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 40px;
	animation: fadeInUp 1.5s ease-out;
	position: relative;
	z-index: 10;
}

/* 品牌标识区域 */
.brand-section {
	text-align: center;
	animation: fadeInDown 1.5s ease-out 0.3s both;
}

.logo-container {
	display: flex;
	flex-direction: column;
	align-items: center;
	position: relative;
}

.logo-icon {
	width: 150px;
	animation: logoFloat 4s ease-in-out infinite;
	position: relative;
	z-index: 10;
}

@keyframes logoFloat {
	0%,
	100% {
		transform: translateY(0px) rotateY(0deg) scale(1);
	}
	50% {
		transform: translateY(-15px) rotateY(5deg) scale(1.05);
	}
}

@keyframes fadeInUp {
	from {
		opacity: 0;
		transform: translateY(40px) translateZ(-50px);
	}
	to {
		opacity: 1;
		transform: translateY(0) translateZ(0);
	}
}

@keyframes fadeInDown {
	from {
		opacity: 0;
		transform: translateY(-40px) translateZ(-50px);
	}
	to {
		opacity: 1;
		transform: translateY(0) translateZ(0);
	}
}

/* 登录状态提示 */
.login-status {
	margin-top: 30px;
	text-align: center;
	min-height: 40px;
	display: flex;
	align-items: center;
	justify-content: center;
}

.status-text {
	font-size: 14px;
	padding: 8px 20px;
	border-radius: 20px;
	animation: fadeIn 0.5s ease-in-out;
	backdrop-filter: blur(10px);
	-webkit-backdrop-filter: blur(10px);
}

.logging-in {
	background: rgba(255, 152, 0, 0.15);
	color: #ff9800;
	border: 1px solid rgba(255, 152, 0, 0.3);
	animation: pulse 1.5s ease-in-out infinite;
}

.logged-in {
	background: rgba(76, 175, 80, 0.15);
	color: #4caf50;
	border: 1px solid rgba(76, 175, 80, 0.3);
}

.login-failed {
	background: rgba(244, 67, 54, 0.15);
	color: #f44336;
	border: 1px solid rgba(244, 67, 54, 0.3);
}

@keyframes fadeIn {
	from {
		opacity: 0;
		transform: translateY(10px);
	}
	to {
		opacity: 1;
		transform: translateY(0);
	}
}

@keyframes pulse {
	0%,
	100% {
		opacity: 1;
		transform: scale(1);
	}
	50% {
		opacity: 0.8;
		transform: scale(1.02);
	}
}

/* ==================== 响应式设计 ==================== */
@media screen and (max-width: 750rpx) {
	.container {
		padding: 20px 16px;
	}

	.main-content {
		max-width: 350px;
		gap: 32px;
	}

	.logo-icon {
		width: 130px;
		margin-bottom: 140px;
	}

	.glow {
		filter: blur(40px);
	}

	.glow-1,
	.glow-2,
	.glow-3,
	.glow-4,
	.glow-5 {
		width: 200px;
		height: 200px;
	}
}

@media screen and (max-width: 500rpx) {
	.container {
		padding: 16px 12px;
	}

	.main-content {
		max-width: 300px;
		gap: 28px;
	}

	.logo-icon {
		width: 120px;
		margin-bottom: 120px;
	}

	.particle {
		width: 3px;
		height: 3px;
	}

	.glow {
		filter: blur(30px);
	}

	.glow-1,
	.glow-2,
	.glow-3,
	.glow-4,
	.glow-5 {
		width: 150px;
		height: 150px;
	}

	.cube-1 {
		width: 60px;
		height: 60px;
	}

	.cube-2 {
		width: 45px;
		height: 45px;
	}

	.sphere-1 {
		width: 70px;
		height: 70px;
	}

	.pyramid-1 {
		width: 55px;
		height: 55px;
	}

	.ring-1 {
		width: 75px;
		height: 75px;
	}
}
